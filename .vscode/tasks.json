{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Devika",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/scripts/python",
			"args": [
			"devika.py"
			],
			"options": {
			"cwd": "${workspaceFolder}",
			"justMyCode": false
			}
		},
		{
			"label": "Run UI",
			"type": "shell",
			"command": "cmd.exe",
			"args": [
				"/c",
				"bun install &&  bun run dev "
			],
			"options": {
				"cwd": "${workspaceFolder}/ui",
				"justMyCode": false
			}
		}
		
	]
}